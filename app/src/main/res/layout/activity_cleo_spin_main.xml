<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cleo"
    tools:context=".wildcleowhite.CleoSpinMain">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_cleo_pic" />

    <EditText
        android:id="@+id/ed_cleo_nick"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="20dp"
        android:maxLength="10"
        android:background="@drawable/bg_edit"
        android:inputType="textPersonName"
        android:hint="Enter your nickname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.17000002"
        app:srcCompat="@drawable/text_main_cleo" />

    <Button
        android:id="@+id/b_cleo_main"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Start"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_cleo_nick"
        app:layout_constraintVertical_bias="0.51" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:text="Please, enter your nickname"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:fontFamily="@font/sans"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/ed_cleo_nick"
        app:layout_constraintStart_toStartOf="@+id/ed_cleo_nick"
        app:layout_constraintTop_toBottomOf="@+id/ed_cleo_nick" />
</androidx.constraintlayout.widget.ConstraintLayout>